<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pgmacdesign.lacunacompanion"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

		<!-- First is the splash screen -->
        <activity
            android:name="com.pgmacdesign.lacunacompanion.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>        
          
        <!-- This activity is for shared preferences-->
        <activity       
            android:name=".SharedPrefs"
            android:label="SharedPrefs"  >
        </activity>        
        
        <!-- This activity is for STUFFFFFFFFFFFF-->
        <activity       
            android:name=".MainActivity"
            android:label="Main Activity"  >
        </activity>           
        
        
        
        
        
    </application>

</manifest>
